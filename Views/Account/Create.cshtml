@model rdp.Data.Entities.ApplicationUser

<div style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; max-width: 1200px; margin: 0 auto; padding: 20px;">
    <!-- Başlık -->
    <div style="background: linear-gradient(135deg, #6e8efb, #a777e3); padding: 25px; color: white; text-align: center; border-radius: 10px; margin-bottom: 30px; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
        <h1 style="margin: 0; font-weight: 600;">Create New Account</h1>
        <p style="margin: 5px 0 0; opacity: 0.9;">For user: @Model.Name @Model.SurName</p>
    </div>

    <div class="row" style="display: flex; gap: 20px;">
        <!-- Form Kısmı -->
        <div class="col-6" style="flex: 1; background: white; padding: 25px; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.05);">
            <form asp-action="Create" method="post">
                <div style="margin-bottom: 25px;">
                    <h3 style="color: #6e8efb; margin-top: 0; border-bottom: 2px solid #a777e3; padding-bottom: 8px; display: inline-block;">Account Information</h3>
                </div>
                
                <input type="hidden" name="ApplicationUserId" value="@Model.Id">
                
                <div style="margin-bottom: 20px;">
                    <label style="display: block; margin-bottom: 8px; color: #555; font-weight: 500;">Account Number</label>
                    <input type="text" name="AccountNumber" style="width: 100%; padding: 12px; border: 2px solid #e2e8f0; border-radius: 8px; font-size: 16px; transition: all 0.3s;">
                </div>
                
                <div style="margin-bottom: 30px;">
                    <label style="display: block; margin-bottom: 8px; color: #555; font-weight: 500;">Initial Balance</label>
                    <input type="text" name="Balance" style="width: 100%; padding: 12px; border: 2px solid #e2e8f0; border-radius: 8px; font-size: 16px; transition: all 0.3s;">
                </div>
                
                <button type="submit" style="background: linear-gradient(135deg, #6e8efb, #a777e3); color: white; border: none; padding: 12px 25px; border-radius: 8px; font-size: 16px; font-weight: 600; cursor: pointer; transition: all 0.3s; box-shadow: 0 4px 10px rgba(110, 142, 251, 0.3);">
                    Create Account
                </button>
            </form>
        </div>
        
        <!-- Kullanıcı Bilgileri Kısmı -->
        <div class="col-6" style="flex: 1; background: white; padding: 25px; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.05);">
            <div style="margin-bottom: 25px;">
                <h3 style="color: #a777e3; margin-top: 0; border-bottom: 2px solid #6e8efb; padding-bottom: 8px; display: inline-block;">User Information</h3>
            </div>
            
            <div style="margin-bottom: 20px; padding: 15px; background: #f9f5ff; border-radius: 8px;">
                <div style="display: flex; justify-content: space-between; margin-bottom: 12px;">
                    <span style="font-weight: 500; color: #6e8efb;">Name:</span>
                    <span class="text-warning">@Model.Name</span>
                </div>
                <div style="display: flex; justify-content: space-between; margin-bottom: 12px;">
                    <span style="font-weight: 500; color: #6e8efb;">Surname:</span>
                    <span class="text-warning">@Model.SurName</span>
                </div>
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <span style="font-weight: 500; color: #6e8efb;">Total Accounts:</span>
                    <count-tag count="@Model.Id" style="font-size: 18px; font-weight: 600; color: #a777e3;"></count-tag>
                </div>
            </div>
            
            <div style="margin-top: 30px; text-align: center;">
                <div style="background: linear-gradient(135deg, #f6f7fb, #e8eaf1); padding: 15px; border-radius: 8px;">
                    <p style="margin: 0; color: #6e8efb; font-weight: 500;">New accounts will be activated immediately</p>
                </div>
            </div>
        </div>
    </div>
</div>