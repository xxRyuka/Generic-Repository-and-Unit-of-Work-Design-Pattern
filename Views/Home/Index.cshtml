@{
    ViewData["Title"] = "Home Page";
}
@model List<UserListModel>

<link rel="stylesheet" href="~/css/styles.css" />

<div class="main-container">
    <!-- Başlık -->
    <div class="gradient-header">
        <h1>Hoş Geldiniz</h1>
        <p>ASP.NET Core ile web uygulamaları geliştirin</p>
        <div class="gold-divider"></div>
    </div>

    <h2 style="color: #6e8efb; margin-bottom: 20px;">Kullanıcı Listesi</h2>

    <div class="grid-container">
        @foreach (var item in Model)
        {
            <div class="user-card">
                <h3>@item.Name @item.SurName</h3>

                <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 15px;">
                    <span style="font-weight: 500; color: #555;">Toplam Hesap:</span>
                    <count-tag count="@item.Id" style="font-size: 18px; font-weight: 600; color: #6e8efb;"></count-tag>
                </div>

                <div class="purple-divider"></div>

                <a asp-controller="Account" asp-action="GetByUserId" asp-route-userId="@item.Id" class="index-btn">
                    Details
                </a>

                <a asp-controller="Account" asp-action="Create" asp-route-id="@item.Id" class="index-btn">
                    Add Account
                </a>
            </div>
        }
    </div>
</div>